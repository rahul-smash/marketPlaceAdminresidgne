<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="AppTheme.Base">

    </style>

    <style name="AppTheme.Base" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="android:actionMenuTextColor">@color/colorWhite</item>
    </style>

    <style name="ProgressDialog" parent="android:Theme.Holo.Dialog">
        <item name="android:alertDialogStyle">@style/CustomAlertDialogStyle</item>
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:textColorPrimary">#FFFFFF</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="CustomAlertDialogStyle">
        <item name="android:alertDialogStyle">?android:attr/progressBarStyleLarge</item>
        <item name="android:bottomBright">@color/transparent</item>
        <item name="android:bottomDark">@color/transparent</item>
        <item name="android:bottomMedium">@color/transparent</item>
        <item name="android:centerBright">@color/transparent</item>
        <item name="android:centerDark">@color/transparent</item>
        <item name="android:centerMedium">@color/transparent</item>
        <item name="android:fullBright">@color/transparent</item>
        <item name="android:fullDark">@color/transparent</item>
        <item name="android:topBright">@color/transparent</item>
        <item name="android:topDark">@color/transparent</item>
    </style>

    <style name="MineCustomTabText" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">11sp</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.MaterialComponents.ActionBar" />

    <style name="AppTheme.AppBarOverlay.SearchView" parent="ThemeOverlay.MaterialComponents.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.MaterialComponents.ActionBar" />

    <style name="AppTheme.EditText" parent="Widget.AppCompat.EditText">
        <item name="android:textColor">@color/colorTextDark</item>
        <item name="android:textColorHint">@color/colorTextGrey</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Medium</item>
        <item name="android:singleLine">true</item>
        <item name="android:imeOptions">actionNext</item>
        <item name="android:inputType">textPersonName</item>
    </style>

    <style name="AppTheme.EditText.MultiLine" parent="AppTheme.EditText">
        <item name="android:imeOptions">actionDone</item>
        <item name="android:singleLine">false</item>
        <item name="android:inputType">textMultiLine</item>
        <item name="android:scrollbars">vertical</item>
        <item name="android:overScrollMode">always</item>
        <item name="android:scrollbarStyle">insideInset</item>
        <item name="android:gravity">start</item>
        <item name="android:padding">16dp</item>
    </style>

    <!--TextView Styles-->
    <style name="AppTheme.TextView.Medium" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/colorTextDark</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Medium</item>
    </style>

    <style name="AppTheme.TextView.MediumBold" parent="AppTheme.TextView.Medium">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="AppTheme.TextView.MediumGrey" parent="AppTheme.TextView.Medium">
        <item name="android:textColor">@color/colorTextGrey</item>
    </style>

    <style name="AppTheme.TextView.Small" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/colorTextGrey</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Small</item>
    </style>

    <style name="AppTheme.TextView.Small.BottomNavigation" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/colorTextGrey</item>
        <item name="android:textSize">10sp</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Small</item>
    </style>

    <style name="AppTheme.Chip.Small" parent="Widget.MaterialComponents.Chip.Action">
        <item name="chipMinHeight">30dp</item>
        <item name="chipIconSize">18dp</item>
        <item name="chipStrokeWidth">1.5dp</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Small</item>
        <item name="rippleColor">@android:color/transparent</item>
        <item name="android:stateListAnimator" tools:targetApi="lollipop">@null</item>
    </style>

    <style name="AppTheme.Chip.Normal" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="chipStrokeWidth">1.5dp</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Small</item>
        <item name="rippleColor">@android:color/transparent</item>
        <item name="android:stateListAnimator" tools:targetApi="lollipop">@null</item>
        <item name="textStartPadding">16dp</item>
        <item name="textEndPadding">16dp</item>
        <item name="chipStrokeColor">@color/chip_stroke_color_selector</item>
        <item name="chipBackgroundColor">@color/colorBackgroundChips</item>
    </style>

    <style name="AppTheme.Chip.Small.Reject" parent="AppTheme.Chip.Small">
        <item name="android:textColor">@color/colorRejectGrey</item>
        <item name="chipStrokeColor">@color/colorRejectGrey</item>
        <item name="chipBackgroundColor">@color/colorBackground</item>
        <item name="chipIcon">@drawable/rejecticon</item>
    </style>

    <style name="AppTheme.Chip.Small.Accept" parent="AppTheme.Chip.Small">
        <item name="android:textColor">@color/colorAccept</item>
        <item name="chipStrokeColor">@color/colorAccept</item>
        <item name="chipBackgroundColor">@color/colorWhite</item>
        <item name="chipIcon">@drawable/accepticon</item>
    </style>

    <style name="AppTheme.Chip.Small.Ship" parent="AppTheme.Chip.Small">
        <item name="android:textColor">@color/colorShipped</item>
        <item name="chipStrokeColor">@color/colorShipped</item>
        <item name="chipBackgroundColor">@color/colorWhite</item>
        <item name="chipIcon">@drawable/accepticon</item>
    </style>

    <style name="AppTheme.Chip.Small.Deliver" parent="AppTheme.Chip.Small">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="chipStrokeColor">@color/colorPrimary</item>
        <item name="chipBackgroundColor">@color/colorWhite</item>
        <item name="chipIcon">@drawable/accepticon</item>
    </style>

</resources>
