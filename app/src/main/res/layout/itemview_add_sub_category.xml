<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp">

    <LinearLayout
        android:id="@+id/ll_add_sub_category_image"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@drawable/shape_add_image"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/addimageicon" />

        <TextView
            style="@style/AppTheme.TextView.Tiny"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="Add Image"
            android:textColor="@color/colorPrimary" />

    </LinearLayout>

    <ImageView
        android:id="@+id/iv_sub_category"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:src="@drawable/addimageicon"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/ll_add_sub_category_image"
        app:layout_constraintEnd_toEndOf="@+id/ll_add_sub_category_image"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/ll_add_sub_category_image" />

    <ImageView
        android:id="@+id/iv_cancel"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:background="@drawable/shape_grey_dark_rounded_alpha"
        android:src="@drawable/rejecticon"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/ll_add_sub_category_image"
        app:layout_constraintEnd_toEndOf="@+id/ll_add_sub_category_image"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/ll_add_sub_category_image"
        app:tint="@color/colorTextDark" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textInputLayout8"
        style="@style/Widget.Design.TextInputLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:hint="Sub Category Name"
        app:hintTextColor="@color/colorTextGrey"
        app:layout_constraintBottom_toBottomOf="@+id/ll_add_sub_category_image"
        app:layout_constraintEnd_toStartOf="@+id/iv_delete"
        app:layout_constraintStart_toEndOf="@+id/ll_add_sub_category_image">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edt_sub_category_name"
            style="@style/AppTheme.TextView.Medium"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:imeOptions="actionDone"
            android:inputType="textCapWords"
            android:maxLines="1" />

    </com.google.android.material.textfield.TextInputLayout>

    <ImageView
        android:id="@+id/iv_delete"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/rejecticon"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="@color/colorTextDark" />

</androidx.constraintlayout.widget.ConstraintLayout>