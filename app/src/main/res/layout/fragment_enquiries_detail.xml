<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        android:id="@+id/header"
        layout="@layout/layout_header_activity" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/header">

        <RelativeLayout
            android:id="@+id/relativeMain"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/relative0"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <RelativeLayout
                    android:id="@+id/nameBlock"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    >

                    <TextView
                        android:id="@+id/txtLblName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ems="6"
                        android:text="Name:"
                        android:textColor="@android:color/black"
                        android:textStyle="bold"
                        android:visibility="visible" />

                    <TextView
                        android:id="@+id/txtName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_toRightOf="@+id/txtLblName"
                        android:text="Amit Kumar"
                        android:textColor="@android:color/black"
                        android:visibility="visible" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/addressBlock"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/nameBlock"
                    android:layout_below="@+id/nameBlock"
                    android:layout_marginTop="10dp">

                    <TextView
                        android:id="@+id/txtLblAddress"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ems="6"
                        android:text="City:"
                        android:textColor="@android:color/black"
                        android:textStyle="bold"
                        android:visibility="visible" />

                    <TextView
                        android:id="@+id/txtAddress"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_toRightOf="@+id/txtLblAddress"
                        android:text="#216,Sector 16,Chandigarh,India"
                        android:textColor="@android:color/black"
                        android:visibility="visible" />
                </RelativeLayout>

                <TextView
                    android:id="@+id/txtLblEmail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/nameBlock"
                    android:layout_below="@+id/addressBlock"
                    android:layout_marginTop="5dp"
                    android:ems="6"
                    android:text="Email:"
                    android:textColor="@android:color/black"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txtEmail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/addressBlock"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_toRightOf="@+id/txtLblEmail"
                    android:singleLine="true"
                    android:text="amitKumar@gmail.com"
                    android:textColor="@android:color/black" />

                <TextView
                    android:id="@+id/txtLblContact"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/nameBlock"
                    android:layout_below="@+id/txtLblEmail"
                    android:layout_marginTop="5dp"
                    android:ems="6"
                    android:text="Contact:"
                    android:textColor="@android:color/black"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txtContact"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txtLblEmail"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_toRightOf="@+id/txtLblContact"
                    android:text="+91354256548"
                    android:textColor="@android:color/black" />

                <TextView
                    android:id="@+id/txtLblBookingDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/nameBlock"
                    android:layout_below="@+id/txtLblContact"
                    android:layout_marginTop="5dp"
                    android:ems="6"
                    android:text="Booking Date:"
                    android:textColor="@android:color/black"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txtBookingDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txtLblContact"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_toRightOf="@+id/txtLblBookingDate"
                    android:text="jan 2015"
                    android:textColor="@android:color/black" />

            </RelativeLayout>

            <View
                android:id="@+id/divider0"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/relative0"
                android:layout_marginTop="10dp"
                android:background="@color/divider" />

            <RelativeLayout
                android:id="@+id/relative1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/divider0">

                <TextView
                    android:id="@+id/txtMessage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:text="Message:"
                    android:textColor="@color/colorTextDark"
                    android:textSize="@dimen/text_large" />

                <TextView
                    android:id="@+id/txtMessageVal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txtMessage"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:text="Hi"
                    android:textSize="@dimen/text_normal" />

            </RelativeLayout>

        </RelativeLayout>

    </ScrollView>


</RelativeLayout>
