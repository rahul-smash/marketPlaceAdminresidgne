    <LinearLayout

        android:id="@+id/ll_top_view"
        android:layout_width="match_parent"
        android:layout_height="270dp"
        android:layout_below="@+id/header"
        android:background="#502B88"
        android:orientation="vertical">


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="2dp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="2dp">

            <LinearLayout
                android:id="@+id/llTotal"
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_margin="8dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txtTotal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Total"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/text_normal" />

                <TextView
                    android:id="@+id/txtTotalPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txtTotal"
                    android:layout_marginTop="5dp"
                    android:text="300"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/text_normal" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:layout_toRightOf="@+id/llTotal"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txtCartSaving"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="Cart Saving"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/text_normal" />

                <TextView
                    android:id="@+id/txtCartSavings"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txtCartSaving"
                    android:layout_marginTop="5dp"
                    android:text="300"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/text_normal" />
            </LinearLayout>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="15dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txtDeleiveryAddress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Delievery Address"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/text_normal"></TextView>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_below="@+id/txtDeleiveryAddress"
                android:orientation="horizontal"
                android:weightSum="1">

                <TextView
                    android:id="@+id/txtAddress"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.7"
                    android:maxLines="2"
                    android:text="mohit gupta,main road,chandigarh place,17 sector"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/txt_order_detail" />

                <LinearLayout

                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txtDeleiveryAddress"
                    android:layout_marginBottom="-30dp"
                    android:layout_weight="0.4"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/imgGuideMe"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_gravity="center"
                        android:padding="4dp"
                        android:src="@drawable/guidemeicon" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="top"
                        android:text="Guide me"
                        android:textColor="@color/colorWhite"
                        android:textSize="@dimen/text_normal" />

                </LinearLayout>


            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"

            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="15dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txtDeleiverTime"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Delievery Time"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/text_normal"></TextView>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtDeleiveryAddress"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/txtDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:text="20th septemeber 2020"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/txt_order_detail" />

                <TextView
                    android:id="@+id/txtStausVal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txtStaus"
                    android:layout_alignTop="@+id/txtStaus"
                    android:layout_alignRight="@+id/valOdrId"
                    android:layout_marginLeft="10dp"
                    android:gravity="right"
                    android:paddingLeft="5dp"
                    android:paddingTop="3dp"
                    android:paddingRight="5dp"
                    android:paddingBottom="3dp"
                    android:text="Status"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/txt_order_detail" />


            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"

            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="15dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txtNote"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Note"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/text_normal"></TextView>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtDeleiveryAddress"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/txtnoteValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:text="Loreum ipsume amt constructor"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/txt_order_detail" />


            </LinearLayout>


        </LinearLayout>


    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ECECEC"
        android:orientation="vertical">

        <TextView
            android:id="@+id/mtxtItems"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="10dp"
            android:text="2 items"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/txt_order_detail"></TextView>

        <ListView

            android:id="@+id/recyclerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/mtxtItems"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:divider="@android:color/transparent"
            android:dividerHeight="6dp"></ListView>
    </RelativeLayout>

</LinearLayout>