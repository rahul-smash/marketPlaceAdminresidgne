<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/custom_dialog_shape">

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="10dp"
            android:layout_centerHorizontal="true"
            android:text="ValueAppz"
            android:textSize="18sp"
            android:textStyle="normal" />


        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/title"
            android:background="#e9e9e9"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/relative0"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="#e9e9e9">

                <EditText
                    android:id="@+id/message"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:layout_margin="5dp"
                    android:background="@drawable/shape_order_details"
                    android:gravity="left"
                    android:hint="Enter your store message here"
                    android:minLines="4"
                    android:padding="10dp"
                    android:textColor="#6c6c6c"
                    android:textSize="16sp" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/relative0">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:paddingBottom="10dp">

                    <TextView
                        android:id="@+id/yesBtn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_toRightOf="@+id/noBtn"
                        android:background="@drawable/positive_button_shape"
                        android:ems="6"
                        android:gravity="center"
                        android:padding="8dp"
                        android:text="Submit"
                        android:textColor="@android:color/white"
                        android:textSize="15sp"
                        android:visibility="visible" />

                    <TextView
                        android:id="@+id/noBtn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:background="@drawable/negative_button_shape"
                        android:ems="6"
                        android:gravity="center"
                        android:padding="8dp"
                        android:text="Cancel"
                        android:textColor="@android:color/white"
                        android:textSize="15sp"
                        android:visibility="visible" />

                </RelativeLayout>

            </RelativeLayout>

        </RelativeLayout>
    </RelativeLayout>
</LinearLayout>