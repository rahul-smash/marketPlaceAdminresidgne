<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="visible"
        android:background="@color/color_header">

        <Button
            android:id="@+id/backButton"
            android:layout_width="48dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:background="@android:color/transparent"
            android:contentDescription=""
            android:drawableLeft="@drawable/ic_back_white"
            android:visibility="visible" />

        <TextView
            android:id="@+id/textTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:singleLine="true"
            android:text="Stores"
            android:textColor="@color/color_white"
            android:textSize="@dimen/text_xlarge"
            android:visibility="visible" />


    </RelativeLayout>

    <TextView
        android:id="@+id/textLbl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/header"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="Please select your store to proceed"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="@dimen/text_xlarge" />

    <ListView
        android:id="@+id/listStores"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/textLbl"
        android:layout_marginTop="10dp"
        android:divider="@android:color/transparent"
        android:dividerHeight="3dp"></ListView>

</RelativeLayout>