<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_margin="30dp"
        android:background="@drawable/dialog_shape"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                style="@style/TextAppearance.AppCompat.Medium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/roboto"
                android:text="Select your Page"
                android:textColor="@color/colorTextDark" />

            <View
                android:layout_width="120dp"
                android:layout_height="1dp"
                android:layout_marginTop="10dp"
                android:background="@color/colorTextGrey" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_facebook_pages"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:layout_margin="16dp"
                android:scrollbars="vertical"
                tools:listitem="@layout/itemview_facebook_pages" />

            <Button
                android:id="@+id/btn_update_dialog"
                style="@style/TextAppearance.AppCompat.Medium"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:background="@drawable/button_color_shape"
                android:fontFamily="@font/roboto"
                android:text="Submit"
                android:textAllCaps="false"
                android:textColor="@color/colorWhite" />
        </LinearLayout>

        <ProgressBar
            android:id="@+id/pb_loading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:indeterminate="true"
            android:progressDrawable="@color/colorPrimary" />

    </RelativeLayout>

    <ImageView
        android:id="@+id/iv_close_dialog"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_above="@+id/rl_top"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="-56dp"
        android:background="@drawable/circle_gradient_white"
        android:padding="15dp"
        android:src="@drawable/popupcancelicon" />
</RelativeLayout>
